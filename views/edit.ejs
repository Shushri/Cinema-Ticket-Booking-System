<!DOCTYPE html>
<html>
<head>
  <title>Edit Record</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Edit <%= table %> Record</h1>

  <% if (message) { %><div class="success"><%= message %></div><% } %>
  <% if (error) { %><div class="error"><%= error %></div><% } %>

  <form method="POST" action="/edit/<%= table %>/<%= record[Object.keys(record)[0]] %>">
    <% if (table === "Movies") { %>
      <input name="movie_name" value="<%= record.movie_name %>" required>
      <input name="genre" value="<%= record.genre %>" required>
      <input type="number" name="duration" value="<%= record.duration %>" required>
    <% } else if (table === "Theaters") { %>
      <input name="theater_name" value="<%= record.theater_name %>" required>
      <input name="location" value="<%= record.location %>" required>
    <% } else if (table === "Showtimes") { %>
      <input name="movie_id" value="<%= record.movie_id %>" required>
      <input name="theater_id" value="<%= record.theater_id %>" required>
      <input type="date" name="show_date" value="<%= record.show_date.toISOString().split('T')[0] %>" required>
      <input type="time" name="show_time" value="<%= record.show_time %>" required>
    <% } else if (table === "Bookings") { %>
      <input name="user_id" value="<%= record.user_id %>" required>
      <input name="showtime_id" value="<%= record.showtime_id %>" required>
      <input name="seats_booked" value="<%= record.seats_booked %>" required>
    <% } %>
    <button type="submit">Save Changes</button>
  </form>

  <a href="/" class="add-btn">‚Üê Back</a>
</body>
</html>
